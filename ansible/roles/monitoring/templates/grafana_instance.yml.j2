apiVersion: integreatly.org/v1alpha1
kind: Grafana
metadata:
  name: integration-grafana
spec:
  config:
    auth:
      disable_signout_menu: true
    auth.anonymous:
      enabled: false
    log:
      level: info
      mode: console
    security:
      admin_password: {{ grafana_password }}
      admin_user: {{ grafana_user  }}
  dashboardLabelSelector:
    - matchExpressions:
        - key: app
          operator: In
          values:
            - grafana
  ingress:
    enabled: true
